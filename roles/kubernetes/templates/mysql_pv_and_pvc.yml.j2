---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ kubernetes_deployment_name }}-mysql-pv
spec:
  storageClassName: local-storage
  capacity:
    storage: {{ mysql_pv_storage_capacity }}
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/data"

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ kubernetes_deployment_name }}-mysql-pvc
spec:
  storageClassName: local-storage
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi